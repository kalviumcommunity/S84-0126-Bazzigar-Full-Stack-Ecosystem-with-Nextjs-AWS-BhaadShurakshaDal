generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  riskLevel String
  createdAt DateTime @default(now())

  alerts Alert[]
}

model Alert {
  id          String   @id @default(uuid())
  message     String
  severity    String
  locationId  String
  createdAt   DateTime @default(now())

  location Location @relation(fields: [locationId], references: [id])
}
